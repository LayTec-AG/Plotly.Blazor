@code {

    [Parameter]
    public string Url { get; set; }

    string Code { get; set; }

    /// <inheritdoc />
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            Code = await CodeHttpClient.GetStringAsync(Url);
            StateHasChanged();
        }
        await JsRunTime.InvokeVoidAsync("onBlazorReady");
    }

}