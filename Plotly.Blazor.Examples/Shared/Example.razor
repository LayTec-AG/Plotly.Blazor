<PageTitle>@Title</PageTitle>

<MudContainer>
    <MudTabs KeepPanelsAlive="true" Rounded="true" ApplyEffectsToContainer="true" @bind-ActivePanelIndex="SelectedTab">
        <MudTabPanel Text="Example">
            @ChildContent
        </MudTabPanel>
        <MudTabPanel Text="Code">
            <CodeSnippet Url="@Url"/>
        </MudTabPanel>
    </MudTabs>
</MudContainer>

@code
{
    int SelectedTab;

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Url { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}